<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefWidth="1920" prefHeight="1080" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.project101game.controllers.WaitingRoomController">

    <top>
        <HBox alignment="CENTER">
            <Label fx:id="roomLabel" style="-fx-font-size: 48px; -fx-background-color: #d0d0d0; -fx-padding: 10 30 10 30;" text="комната #0000"/>
        </HBox>
    </top>

    <left>
        <VBox alignment="TOP_CENTER">
            <Circle fx:id="avatarCircle" fill="WHITE" radius="120"/>
            <TextField fx:id="nameField" maxWidth="400" promptText="Имя игрока">
                <VBox.margin>
                    <Insets top="40.0"/>
                </VBox.margin>
            </TextField>
            <Button fx:id="randomButton" prefWidth="400" style="-fx-background-color: #b0b0b0; -fx-font-size: 24px; -fx-font-weight: bold;" text="рандом">
                <VBox.margin>
                    <Insets top="40.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="continueButton" onAction="#onStartClick" prefWidth="400" style="-fx-background-color: #b0b0b0; -fx-font-size: 24px; -fx-font-weight: bold;" text="продолжить">
                <VBox.margin>
                    <Insets top="40.0"/>
                </VBox.margin>
            </Button>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>
            <BorderPane.margin>
                <Insets left="60.0"/>
            </BorderPane.margin>
        </VBox>
    </left>

    <center>
        <GridPane fx:id="avatarGrid" alignment="CENTER" hgap="30.0" vgap="40.0"
                  prefWidth="900" prefHeight="700"
                  style="-fx-background-color: #a8a8a8;">
            <children>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Circle fill="WHITE" radius="120" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            </children>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>
        </GridPane>
    </center>

    <bottom>
        <AnchorPane>
            <VBox alignment="BOTTOM_RIGHT" spacing="10" AnchorPane.bottomAnchor="30" AnchorPane.rightAnchor="30">
                <Label prefHeight="50" prefWidth="150"
                       style="-fx-background-color: #c0c0c0; -fx-padding: 10 20 10 20; -fx-font-size: 24px; -fx-font-weight: bold;"
                       text="ЖДУТ"/>
                <Label fx:id="readyLabel" prefHeight="50" prefWidth="150"
                       style="-fx-background-color: white; -fx-padding: 10 20 10 20; -fx-font-size: 24px;"
                       text="2 / 4"/>
            </VBox>
        </AnchorPane>
    </bottom>

</BorderPane>



