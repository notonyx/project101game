<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.project101game.controllers.SettingsController"
            prefWidth="1920" prefHeight="1080"
            style="-fx-background-color: #eeeeee;">

    <VBox alignment="CENTER" layoutX="860" layoutY="400" spacing="30">
        <Label text="настройки" style="-fx-font-size: 32px; -fx-font-weight: bold;" />
        <CheckBox text="музыка" fx:id="musicCheckBox"/>
        <Button text="смена музыки" onAction="#onMusicSwap"/>
        <Button text="правила игры" onAction="#onRulesClick"/>
        <Button text="в меню" onAction="#onBackClick"/>
    </VBox>
</AnchorPane>
